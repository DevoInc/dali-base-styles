{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {}
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "github": {
    "release": true
  },
  "git": {
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}",
    "commitMessage": "Release: v${version}"
  },
  "npm": {
    "allowSameVersion": true
  }
}
